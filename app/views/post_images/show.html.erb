<section class="sct-color-1 slice">
  <div class="container">
    <div class="row">
      <div class="col-md-12 post_images_container">
        <div class="post-item">

          <div class="post-meta-top">
            <div class="post-image">
              <%= attachment_image_tag @post_image, :image, class: "profile-thumb", size: "500x500" %>
            </div>
          </div>

          <div class="post-content">
            <h2 class="post-title"><%= @post_image.title %></h2>
            <ul class="meta-info-cells v4 float-wrapper">
              <li>
              <i class="fa fa-user"></i>By<a href="#">
              <%= @post_image.user.name %></a>
              </li>
              <li>
                <i class="fa fa-calendar"></i><%= @post_image.created_at.strftime('%Y/%m/%d') %>
              </li>
                <!-- いいね -->
                <% if @post_image.liked_by?(current_user) %>
                 <li>
                   <%= link_to post_image_likes_path(@post_image), method: :delete do %>
                   <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                   <%= @post_image.likes.count %> いいね
                   <% end %>
                 </li>
                <% else %>
                 <li>
                   <%= link_to post_image_likes_path(@post_image), method: :post do %>
                   <i class="fa fa-heart-o" aria-hidden="true"></i>
                   <%= @post_image.likes.count %> いいね
                   <% end %>
                 </li>
                <% end %>
                <!-- 編集/削除 -->
                <li>
                   <% if @post_image.user == current_user %>
                   <%= link_to "編集", edit_post_image_path(@post_image) %>
                   <% end %>
                </li>
                 <li>
                   <% if @post_image.user == current_user %>
                   <%= link_to "削除", post_image_path(@post_image), method: :delete %>
                   <% end %>
                 </li>
            </ul>

            <div class="post-content-inner mt-20">
              <p><%= @post_image.caption %></p>
            </div>
          </div>

            <!-- コメントの表示 -->
          <div class="comment-list bt style-2" id="comments">
            <div class="float-wrapper">
              <p><b class="comment-count"><%= @post_image.image_comments.count %>件のコメント</b></p>
            </div>
             <ol>
               <% @post_image.image_comments.each do |image_comment| %>
                  <li class="comment">
                    <div class="comment-body bb">
                      <div class="comment-text">
                        <div class="comment-author clearfix">
                          <a href="#" class="link-author"><%= image_comment.user.name %></a>
                            <span class="comment-meta">
                              <span class="comment-date"><%= image_comment.created_at.strftime('%Y/%m/%d/%H:%M') %></span>
                            </span>
                              <% if image_comment.user == current_user %>
                              <%= link_to "削除", post_image_image_comments_path(id: image_comment,post_image_id: @post_image), method: :delete, "data-confirm" => "本当に消しますか？" %>
                              <% end %>
                        </div>
                          <div class="comment-entry"><%= image_comment.comment %></div>
                      </div>
                    </div>
                  </li>
                <% end %>
             </ol>
          </div>

           <!-- コメント投稿フォーム -->
           <div class="section-title-wrapper style-1 v1 mt-30" id="divAddComment">
            <h3 class="section-title left">
              <span>コメント</span>
            </h3>
           </div>
               <%= form_for [@post_image, @image_comment] do |f| %>
                 <div class="row">
                  <div class="col-sm-12">
                    <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
                  </div>
                 </div>
                <%= f.submit "投稿する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
               <% end %>

        </div>
      </div>
    </div>
  </div>
</section>