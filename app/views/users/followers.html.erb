<div class="container">
       <div class="row-follow">
          <div class="form-header text-center">
             <h3 class="form-header-title">フォローされているユーザー</h3>
             <div class="form-body">
                <div class="row">
              　　　<% @users.each do |user| %>
                        <p><%= link_to user_path(user.id) do %>
                			<%= attachment_image_tag user, :profile_image, class: "img-circle profile-img", fallback: "no-image.jpg", size: "50x50" %>
                           <% end %>
                		   <%= link_to user.name,user_path(user.id) %>
                		   <% if current_user != user %>
                			 <% if user.followed_by?(current_user) %>
                			   <%=link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class:"btn btn-default", :style=>"width: 120px;" %>
                			 <% else %>
                			   <%=link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-primary", :style=>"width: 120px;" %>
                			 <% end %>
            			    <% end %>
                        </p>
            		<% end %>
	            </div>
             </div>
          </div>
       </div>
</div>