<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
              <div class="container">
                  <div class="row">
                      <div class="col-md-4 col-md-offset-4">
                          <div class="form-user style-1 rounded has-shadow-1"> 
                            <div class="form-header text-center">
                                <h2 class="form-header-title">プロフィール編集</h2>
                            </div>

                            <div class="form-body">
                              <%= form_for(@user) do |f| %>
                                <div class="form-group has-icon">
                                  <label class="control-label sr-only" for="inputName">Name</label>
                                   お名前(ニックネーム)
                                   <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"ニックネーム"%>
                                </div>
                            <div class="form-group has-icon">
                              <div class="user-edit-image">
                                <%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-img", fallback: "no-image.jpg", size: "120x120" %>
                              </div>
                                 <label class="control-label sr-only" for="user_profile_image">ProfileImage</label>
                                   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                                     <div class="form-group has-icon">
                                         <br>
                                         自己紹介
                                         <%= f.text_area :introduction, rows:'5', class: "form-control",placeholder: "自己紹介をここに" %>
                                     </div>
                            </div>
                                   <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                                   <% end %>
                            </div>
                          </div>
                      </div>
                  </div>
              </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>