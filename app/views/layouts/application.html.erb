<!DOCTYPE html>
<html>
  <head>
    <title>SHIBAcafe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="clearfix">
        <div class="container-fluid">
          <div class="container">
            <div class="row">
              <div class="page-header">
                <div class="col-sm-4">
                  <button type="button" class="navbar-toggle collapsed"data-toggle="collapse"data-target="#navbarEexample8">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  </button>

                  <div class="navbar-brand">
                    <a href="/">SHIBAcafe</a>
                  </div>
                </div>

                  <div class="clearfix col-sm-8">
                    <div class="collapse navbar-collapse"  id="navbarEexample8">
                      <div class="navbar-right">
                      <% if user_signed_in? %>
                      <ul class="nav navbar-nav" style="margin-top:5px;">
                      <li><%= link_to "投稿する" %></li>
                      <li><%= link_to "マイページ" %></li>
                      <li><%= link_to "通知" %></li>
                      <li><%= link_to "_ログアウト", destroy_user_session_path, :method => :delete, class: "glyphicon glyphicon-log-out , text-muted" %></li>
                     </ul>
                  <% else %>
                     <ul class="nav navbar-nav" style="margin-top:5px;">
                      <li><%=link_to "_新規会員登録", new_user_registration_path, class: "glyphicon glyphicon-log-in , text-muted" %></li>
                      <li><%=link_to "_ログイン", new_user_session_path, class: "glyphicon glyphicon-home , text-muted" %></li>
                     </ul>
                  <% end %>
                     </div>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
    </header>


    <%= yield %>
  </body>
</html>
