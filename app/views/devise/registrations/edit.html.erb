<section class="slice slice-lg sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">

        <div class="form-user style-1 rounded has-shadow-1">
          <div class="form-header text-center">
            <h2 class="form-header-title">アカウント編集</h2>
          </div>

           <div class="form-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputEmail">Email</label>
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"新アドレス" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                 <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputPhone_number">Phone</label>
                  <%= f.label :phone_number %>
                  <%= f.text_field :phone_number, class:"form-control", id:"inputPhone_number", placeholder:"電話番号"%>
              </div>

              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputPassword">パスワード</label>
                  <%= f.label :password %> <i>(変更しない場合は空欄のまま)</i><br />
                  <%= f.password_field :password, class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
                    <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> 文字以上</em>
                 <% end %>
              </div>

              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputConfirmPassword">パスワード確認</label>
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード確認" %>
              </div>

              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputCurrentPassword">現在のパスワード</label>
                  <%= f.label :current_password %><br> <i>(パスワードを変更するには現在のパスワードが必要です)</i><br />
                  <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", id:"inputConfirmPassword" %>
              </div>

              <div class="actions">
                  <%= f.submit "更新する", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
              </div>
            <% end %>

           <h3>※退会する</h3>

            <b>一度退会すると投稿したもの全て消去されます。<%= button_to "退会", registration_path(resource_name), data: { confirm: "本当に退会して宜しいですか?" }, method: :delete, class:"btn btn-danger btn-block btn-base-1 mt-20" %></b>

             <%= link_to "Back", :back %>
           </div>
        </div>
      </div>
    </div>
  </div>
</section>