<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="row">
          <div class="col-md-6 col-md-offset-3 post_question_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>相談投稿フォーム</span>
              </h3>
            </div>

          <%= form_for(@post_question, url: post_questions_path) do |f| %>
            <% if @post_question.errors.any? %>
              <div id="error_explanation">
                <h2><%= @post_question.errors.count %>件のエラーが発生しました。</h2>
                <ul>
                <% @post_question.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
               </div>
              <% end %>

              <br>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group has-icon">
                    <label class="control-label sr-only">タイトル</label>
                    <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
                    <span aria-hidden="true"></span>
                  </div>
                </div>
                <div class="col-sm-6">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"内容をここに" %>
                </div>
              </div>

              <hr>
              <%= f.submit "投稿", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>