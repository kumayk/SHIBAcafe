<div class="box15">
  <div class="user-view clearfix ">
      <%= link_to user_path(notification.visiter) do %>
        <%= attachment_image_tag notification.visiter, :profile_image, class: "img-circle pull-left profile-img", fallback: "no-image.jpg", size: "30x30" %>
      <% end %>
      <%= notification_form(notification) %>
      <span class="moderate-font">
      	<%= " (#{time_ago_in_words(notification.created_at)}前)" %>
      </span>
      <br>
      <% if !@comment.nil? %>
        <p class="moderate-font"><%= @comment %></p>
      <% end %>
  </div>
</div>